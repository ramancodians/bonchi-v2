{
  "name": "bonchi_v2",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prod": "npm run check-node && npm run build && npm run pm2:prod",
    "pm2:dev": "pm2 start ecosystem.config.cjs --only bonchi-server-dev,bonchi-web-dev",
    "pm2:prod": "npm run build && pm2 start ecosystem.config.cjs --only bonchi-server,bonchi-web-preview",
    "pm2:all": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.cjs",
    "pm2:delete": "pm2 delete ecosystem.config.cjs",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">=22.15.0",
    "npm": ">=10.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
